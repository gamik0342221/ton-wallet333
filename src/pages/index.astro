---
import MainLayout from '../layouts/main.astro';
import WalletSplash from '../components/WalletSplash';

const pageClass = 'wallet-splash';
---

<MainLayout pageClass={pageClass}>
  <WalletSplash client:only="react" />
</MainLayout>

<style is:global>
  html.wallet-splash,
  html.wallet-splash body {
    margin: 0;
    padding: 0;
    height: 100vh;
    overflow: hidden;
  }
</style>
